<form action="/register" method="POST">
    <div class="form-group">
    <label for="email">Email Address</label>
    <input type="email" id="email" name="user_email" class="form-control" placeholder="Enter Email"/>
    <small class="form-text text-muted">We'll share your email with ALL of our advertisors</small>
    </div>

    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" class="form-control" id="password" name="user_password" placeholder="Password">
    </div>



    <button type="submit" class="btn btn-primary">Submit</button>

</form>